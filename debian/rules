#!/usr/bin/make -f

export DH_OPTIONS

%:
	dh $@ --with python3

override_dh_auto_build:
	python3 -m build --wheel --no-isolation || true

override_dh_installsystemd:
	dh_installsystemd --name=fnd-client --no-enable --no-start

override_dh_builddeb:
	dh_builddeb
	# Move resulting artifacts into in-tree dist_debian for convenience
	mkdir -p dist_debian
	for f in ../*.deb ../*.changes ../*.buildinfo ../*.dsc ../*.tar.* ../*.orig.tar.*; do \
		[ -e "$$f" ] || continue; \
		mv "$$f" dist_debian/; \
	done
